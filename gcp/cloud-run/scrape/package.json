{
  "name": "scrape-service",
  "version": "1.0.0",
  "description": "Cloud Run service for web scraping with Puppeteer and LangChain",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "docker build -t scrape-service .",
    "deploy": "gcloud run deploy scrape-service --source . --region us-east1 --allow-unauthenticated --memory 2Gi --timeout 30s --max-instances 10"
  },
  "dependencies": {
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "@google-cloud/secret-manager": "^5.0.0",
    "@langchain/core": "^0.3.64",
    "@langchain/openai": "^0.6.1",
    "langchain": "^0.3.30",
    "puppeteer": "^24.14.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "AlignMyResume",
  "license": "UNLICENSED"
}